{
  "name": "byegl",
  "version": "0.2.2",
  "description": "A reimplementation of the WebGL API on top of WebGPU, allowing for gradual migration into the future of 3d on the web",
  "author": "Iwo Plaza (https://iwoplaza.dev)",
  "license": "MIT",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/software-mansion-labs/byegl.git"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "pnpm build",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.64",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "unplugin-typegpu": "^0.2.2",
    "webgl-constants": "^1.1.1"
  },
  "dependencies": {
    "@iwoplaza/shaderkit": "^0.6.3",
    "typegpu": "^0.7.1"
  }
}
